        {
            "apiVersion": "batch/v1",
            "kind": "Job",
            "metadata": {
                "labels": {
                    "app": "restore-gogs-mysql",
                    "group": "cicd",
                    "template": "cicd"
                },
                "name": "restore-gogs"
            },
            "spec": {
                "paralellism": 0,
                "completions": 1,
                "template": {
		    "metadata": {
                    	"name": "raistore-gogs-tmpl"
		    },
		    "spec": {
			"containers": [
			    {
				"command": [
				    "/bin/bash",
				    "/data/scripts/restore.sh"
				],
				"env": [
				    {
					"name": "SERVICE_NAME",
					"value": "gogs"
				    },
				    {
					"name": "DESTINATION_PATH",
					"value": "/data"
				    }
				],
				"image": "snapgizmos/backups",
				"name": "restore-gogs",
				"resources": {
				    "limits": {
					"memory": "128Mi"
				    }
				},
				"volumeMounts": [
				    {
					"mountPath": "/data/scripts/",
					"name": "scripts-volume"
				    },
				    {
					"mountPath": "/data/secrets/",
					"name": "secrets-volume"
				    },
				    {
					"mountPath": "/data/local/",
					"name": "gogs-volume"
				    },
				    {
					"mountPath": "/data/remote/",
					"name": "backup-volume"
				    }
				]
			    }
			],
			"restartPolicy": "Never",
			"volumes": [
			    {
				"configMap": {
				    "name": "backup-restore"
				},
				"name": "scripts-volume"
			    },
			    {
				"secret": {
				    "secretName": "google-drive"
				},
				"name": "secrets-volume"
			    },
			    {
				"persistentVolumeClaim": {
				    "claimName": "gogs-data-pvc"
				},
				"name": "gogs-volume"
			    },
			    {
				"persistentVolumeClaim": {
				    "claimName": "backup-data-pvc"
				},
				"name": "backup-volume"
			    }
			]
		    }
		},
                "restartPolicy": "Never"
            }
        }
